<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para c치mara y almacenamiento -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Declarar que la app usa c치mara (opcional) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PIAMOVILES2"
        tools:targetApi="31">

        <!-- MainActivity - Pantalla de Login (LAUNCHER) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity - Pantalla de Registro -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- FeedActivity - Pantalla principal del Feed -->
        <activity
            android:name=".FeedActivity"
            android:exported="false" />

        <!-- PostDetailActivity - Pantalla de detalle de publicaci칩n -->
        <activity
            android:name=".PostDetailActivity"
            android:exported="false" />

        <!-- ProfileActivity - Pantalla de Perfil -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- EditProfileActivity - Pantalla de edici칩n de Perfil (Reutiliza el registro) -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />

        <!-- FavoritesActivity - Pantalla de Favoritos -->
        <activity
            android:name=".FavoritesActivity"
            android:exported="false" />

        <!-- DraftsActivity - Pantalla de Borradores -->
        <activity
            android:name=".DraftsActivity"
            android:exported="false" />

        <!-- CreatePostActivity - Pantalla de Crear/Editar Recetas -->
        <activity
            android:name=".CreatePostActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>