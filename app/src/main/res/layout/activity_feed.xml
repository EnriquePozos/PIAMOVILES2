<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:orientation="vertical"
    tools:context=".FeedActivity">

    <!-- Header reutilizable con icono de perfil -->
    <include
        android:id="@+id/headerApp"
        layout="@layout/header_app" />

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            app:iconifiedByDefault="false"
            app:queryHint="Search"
            app:searchIcon="@drawable/baseline_search_24"
            app:closeIcon="@drawable/ic_cancel" />
        <!-- "Cambiar por cancel por clear"-->


    </LinearLayout>

    <!-- Lista de publicaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPosts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_post" />

    <!-- Mensaje cuando no hay publicaciones -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_launcher_foreground"
            android:alpha="0.5"
            android:contentDescription="Sin publicaciones" />
        <!-- "Cambiar por otra ocsa, es para cuando no hay publicaciones"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay publicaciones disponibles"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="¡Sé el primero en compartir una receta!"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>



</LinearLayout>