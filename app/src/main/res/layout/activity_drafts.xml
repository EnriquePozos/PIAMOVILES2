<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:orientation="vertical"
    tools:context=".DraftsActivity">

    <!-- Header reutilizable con botón de regreso -->
    <include
        android:id="@+id/headerApp"
        layout="@layout/header_app" />

    <!-- Título de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis borradores"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    <!-- Información sobre borradores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_launcher_foreground"
            android:alpha="0.6"
            android:contentDescription="Info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca una receta para editarla o usar los botones para más opciones"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Lista de borradores -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDrafts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_draft" />

    <!-- Mensaje cuando no hay borradores -->
    <LinearLayout
        android:id="@+id/layoutEmptyDrafts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_launcher_foreground"
            android:alpha="0.5"
            android:contentDescription="Sin borradores" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes borradores guardados"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Empieza a escribir una receta y guárdala como borrador para continuar después"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Botón flotante para agregar nueva receta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCreateNewRecipe"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="+ Crear nueva receta"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#4A7C92"
            app:cornerRadius="24dp"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>