<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header reutilizable con botÃ³n de regreso -->
        <include
            android:id="@+id/headerApp"
            layout="@layout/header_app" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃ­tulo de la pantalla -->
            <TextView
                android:id="@+id/tvScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Crear nueva receta"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Campo: TÃ­tulo de la receta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TÃ­tulo de la receta *"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Ej: Tacos al pastor caseros"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#B3B3B3"
                android:paddingHorizontal="16dp"
                android:inputType="textCapSentences"
                android:maxLength="100" />

            <!-- Campo: DescripciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DescripciÃ³n e ingredientes *"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRecipeDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Describe tu receta, ingredientes y pasos de preparaciÃ³n..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#B3B3B3"
                android:padding="16dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="500"
                android:scrollbars="vertical" />

            <!-- SecciÃ³n: ImÃ¡genes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ImÃ¡genes y videos de la receta"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Agrega imagenes o videos de tu receta"
                android:textColor="#666666"
                android:textSize="12sp" />

            <!-- RecyclerView para multimedia dinÃ¡mica -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMultimedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                tools:listitem="@layout/item_multimedia_preview"
                tools:itemCount="3" />

            <!-- Mensaje cuando no hay multimedia -->
            <TextView
                android:id="@+id/tvEmptyMultimedia"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="ðŸ“· AÃºn no has agregado imÃ¡genes o videos\n\nToca el botÃ³n de abajo para empezar"
                android:textColor="#999999"
                android:textSize="14sp"
                android:background="@drawable/image_placeholder_background"
                android:layout_marginBottom="16dp"
                android:visibility="visible" />

            <!-- BotÃ³n para agregar multimedia -->
            <Button
                android:id="@+id/btnAddMultimedia"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:text="âž• Agregar imagen/video"
                android:textColor="#4A7C92"
                android:textSize="12sp"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius="20dp"
                app:strokeColor="#4A7C92"
                app:strokeWidth="1dp"
                android:paddingHorizontal="16dp" />


            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#E0E0E0" />

            <!-- Botones de acciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Guardar como borrador -->
                <Button
                    android:id="@+id/btnSaveDraft"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ’¾ Guardar borrador"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="1dp" />

                <!-- Publicar -->
                <Button
                    android:id="@+id/btnPublish"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸš€ Publicar"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#4A7C92"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Nota sobre campos obligatorios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="* Campos obligatorios"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>