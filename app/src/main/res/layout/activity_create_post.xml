<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header reutilizable con botón de regreso -->
        <include
            android:id="@+id/headerApp"
            layout="@layout/header_app" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título de la pantalla -->
            <TextView
                android:id="@+id/tvScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Crear nueva receta"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Campo: Título de la receta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Título de la receta *"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Ej: Tacos al pastor caseros"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#B3B3B3"
                android:paddingHorizontal="16dp"
                android:inputType="textCapSentences"
                android:maxLength="100" />

            <!-- Campo: Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Descripción e ingredientes *"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRecipeDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Describe tu receta, ingredientes y pasos de preparación..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#B3B3B3"
                android:padding="16dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="500"
                android:scrollbars="vertical" />

            <!-- Sección: Imágenes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Imágenes de la receta"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Agrega hasta 3 fotos de tu receta"
                android:textColor="#666666"
                android:textSize="12sp" />

            <!-- Container para imágenes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Imagen 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ivImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagen 1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layoutAddImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:alpha="0.7"
                            android:contentDescription="Agregar imagen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar"
                            android:textColor="#666666"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- Botón eliminar imagen 1 -->
                    <ImageButton
                        android:id="@+id/btnRemoveImage1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="Eliminar imagen"
                        android:visibility="gone"
                        android:backgroundTint="#DC3545" />

                </FrameLayout>

                <!-- Imagen 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:id="@+id/ivImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagen 2"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layoutAddImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:alpha="0.7"
                            android:contentDescription="Agregar imagen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar"
                            android:textColor="#666666"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- Botón eliminar imagen 2 -->
                    <ImageButton
                        android:id="@+id/btnRemoveImage2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="Eliminar imagen"
                        android:visibility="gone"
                        android:backgroundTint="#DC3545" />

                </FrameLayout>

                <!-- Imagen 3 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/ivImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagen 3"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layoutAddImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_placeholder_background"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:alpha="0.7"
                            android:contentDescription="Agregar imagen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar"
                            android:textColor="#666666"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- Botón eliminar imagen 3 -->
                    <ImageButton
                        android:id="@+id/btnRemoveImage3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="Eliminar imagen"
                        android:visibility="gone"
                        android:backgroundTint="#DC3545" />

                </FrameLayout>

            </LinearLayout>

            <!-- Opciones de imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:text="📷 Cámara"
                    android:textColor="#4A7C92"
                    android:textSize="12sp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:strokeColor="#4A7C92"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp" />

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="🖼️ Galería"
                    android:textColor="#4A7C92"
                    android:textSize="12sp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:strokeColor="#4A7C92"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#E0E0E0" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Guardar como borrador -->
                <Button
                    android:id="@+id/btnSaveDraft"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="💾 Guardar borrador"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="1dp" />

                <!-- Publicar -->
                <Button
                    android:id="@+id/btnPublish"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="🚀 Publicar"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#4A7C92"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Nota sobre campos obligatorios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="* Campos obligatorios"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>